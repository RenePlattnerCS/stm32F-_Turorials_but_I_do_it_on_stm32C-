#include <stdint.h>
#include <stdio.h>
#include "stm32C0xx.h"
#include "uart.h"

#include "adc.h"

#define GPIOAEN		(1U << 0)
#define GPIOA_5		(1U << 5)
#define LED_PIN 	GPIOA_5

char key;

int main(void)
{
	RCC->IOPENR |= GPIOAEN;
	GPIOA->MODER |= (1U << 10);
	GPIOA->MODER &= ~(1U << 11);

	uart2_rxtx_init();
	while(1)
	{
		//printf("Hello\n\r");
		key =  uart2_read();
		if(key == '1')
		{
			GPIOA->ODR |= LED_PIN;
		}
		else
		{
			GPIOA->ODR &= ~LED_PIN;
		}

	}

}





