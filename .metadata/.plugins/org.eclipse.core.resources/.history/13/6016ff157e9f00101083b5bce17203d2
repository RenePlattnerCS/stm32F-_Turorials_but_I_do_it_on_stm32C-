#include <stdint.h>
#include <stdio.h>
#include "stm32C0xx.h"
#include "uart.h"

#include "adc.h"


uint32_t sensor_value;

int main(void)
{



	uart2_tx_init();
	pa1_adc_interrupt();


	while(1)
	{
		start_conversion();
		sensor_value = adc_read();
		printf("Sensor value:  %d  \n\r",(int) sensor_value);

	}

}


void ADC_IRQHandler(void)
{
	//check for EOC flag
	if(ADC1->ISR & ADC_SR_EOC)
	{

	}
}


