#include "stm32C0xx.h"



#define GPIOAEN		(1U<<0)


#define UART2EN		(1U<<17)





int main(void)
{



	while(1)
	{


	}





}


void uart2_tx_init(void)
{
	//uart gpio pin
	//enable clock on gpioa
	RCC->IOPENR |= GPIOAEN;

	//PA2 mode to alternate function mode
	GPIOA->MODER &=~(1U<<4);
	GPIOA->MODER |= (1U<<5);

	//SetPA2 alt function type to UART_TX (AF07)
	GPIOA->AFR[0] |= (1U <<8);
	GPIOA->AFR[0] |= (1U <<9);
	GPIOA->AFR[0] |= (1U <<10);
	GPIOA->AFR[0] &= ~(1U <<11);

	//configure UART module
	//enable clock on UART2
	//consigure BAUS rate
	//config transfer direction
	//enable uArt module


}
