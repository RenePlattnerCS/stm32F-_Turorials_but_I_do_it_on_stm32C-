#include "stm32C0xx.h"

#define ADC1EN				(1U << 20)
#define APB_CLOCK_EN		(1U << 10)
#define GPIOAEN				(1U << 0)
#define ADEN				(1U << 0)

#define ADC_CH1				(1U << 0)
#define ADC_START			(1U << 2)

void pa1_adc_init(void)
{
	//Enable clock to GPIO pin for ADC chanel 1
	RCC->IOPENR |= GPIOAEN;
	//set mode to analog
	GPIOA->MODER |= (1U<<2);
	GPIOA->MODER |= (1U<<3);

	//configure ADC
	//enable clock to ADC
	//RCC->APBENR1 |= APB_CLOCK_EN;
	RCC->APBENR2 |= ADC1EN;


	//config adc paameters
	//conversion sequence start
	ADC->CHSELR |= ADC_CH1;

	//conversion sequence length

	//enable ADC module
	ADC->CR |= ADEN;



}

void start_conversion(void)
{
	//start conversion
	ADC->CR |= ADC_START;
}

uint32_t adc_read(void)
{
	//wait for conversion to complete

	//read result



}
}
