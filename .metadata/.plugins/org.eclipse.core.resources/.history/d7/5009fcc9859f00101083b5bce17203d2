#include "stm32C0xx.h"
#include <stdint.h>

#define SYSTICK_LOAD_VAL		4800 // cycles happen in 1ms
#define CTRL_ENABLE				(1U << 0)
#define CTRL_CLKSRC				(1U << 2)
#define COUNTFLAG				(1U << 16)

#define ONE_SEC_LOAD 			48000000
#define CTRL_TICKINT				(1U << 1)

void systickDelayMs(int delay)
{
	//config systick
	SysTick->LOAD = SYSTICK_LOAD_VAL;

	//clear Systick current value reg
	SysTick->VAL = 0;
	//enable systick and select internal clk
	SysTick->CTRL = CTRL_ENABLE | CTRL_CLKSRC;

	for(int i=0; i<delay ; i++)
	{
		//wait for COUNT FLAG to be set
		while(!(SysTick->CTRL & COUNTFLAG)) {}

	}
	SysTick->CTRL = 0;

}


void systick_1hz_interrupt(void)
{
	SysTick->LOAD = ONE_SEC_LOAD -1;

	SysTick->VAL = 0;

	//enable systick and select internal clk
	SysTick->CTRL = CTRL_ENABLE | CTRL_CLKSRC | CTRL_TICKINT;


}
