#include "stm32C0xx.h"



#define GPIOAEN		(1U<<0)
#define GPIOCRN		(1U<<2)
#define PIN5		(1U<<5)
#define PIN13		(1U<<13)
#define LED_PIN		PIN5
#define BTN_PIN		PIN13



int main(void)
{
	RCC->IOPENR |= GPIOAEN;
	GPIOA->MODER |= (1U << 10);
	GPIOA->MODER &= ~(1U << 11);

	while(1)
	{
		//GPIOA->ODR ^= LED_PIN;
		//for(int i=0;i<400000;i++){};

		GPIOA->BSRR = LED_PIN;
		for(int i=0;i<400000;i++){};

		GPIOA->BSRR = (1U<<21);
		for(int i=0;i<400000;i++){};
	}
}
